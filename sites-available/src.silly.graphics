server {
  listen 80;
  listen [::]:80;

  server_name src.silly.graphics;

  return 301 https://src.silly.graphics$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name src.silly.graphics;

  root /var/www/src.silly.graphics;
  index index.html index.htm;

  include /etc/nginx/conf.d/main.conf;
  include /etc/nginx/conf.d/directive-only/tls-paths/src.silly.graphics;
  include /etc/nginx/conf.d/directive-only/tls.conf;
}
